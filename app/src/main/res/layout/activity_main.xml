<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="cs.dawson.dqtiffanytheodore.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="20">
            <TextView
                android:id="@+id/tvQuizNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/quiz_number_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvQuizNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:text="@integer/quiz_number_default"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCorrectScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/correct"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCorrectScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@integer/correct_score_default"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvIncorrectScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/incorrect"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvIncorrectScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@integer/incorrect_score_default"
                android:textSize="16sp" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:text="@string/instruction"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDefinition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="@string/definition"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <ImageButton
                android:id="@+id/ib1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:onClick="imageClick"
                app:srcCompat="@drawable/sign1"
                />


            <ImageButton
                android:id="@+id/ib2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:onClick="imageClick"
                app:srcCompat="@drawable/sign2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/ib3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:onClick="imageClick"
                app:srcCompat="@drawable/sign3" />

            <ImageButton
                android:id="@+id/ib4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:onClick="imageClick"
                android:padding="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sign4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint"
                android:textSize="30sp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonCheckedAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/checked_answer"
            android:textSize="30sp"
            android:visibility="invisible" />

    </LinearLayout>
</ScrollView>